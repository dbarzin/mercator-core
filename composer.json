{
  "name": "sourcentis/mercator-core",
  "description": "Mercator core services (modules, licensing, menus, domain models).",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "autoload": {
    "psr-4": {
      "Mercator\\Core\\": "src/"
    }
  },
  "require": {
    "php": "^8.2",
    "illuminate/support": "^11.0",
    "illuminate/database": "^11.46",
    "illuminate/notifications": "^11.46",
    "laravel/passport": "^13.4"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Mercator\\Core\\MercatorCoreServiceProvider"
      ]
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
